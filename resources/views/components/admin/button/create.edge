@jrmc.button.link({
  href: $props.href,
  class: 'btn-circle fixed bottom-20 lg:bottom-10 right-10 mb-safe',
  'up-layer': $props.mode && $props.mode === 'drawer' ? 'new' : 'origin current',
  'up-mode': $props.mode && $props.mode === 'drawer' ? 'drawer' : '',
  'up-on-dismissed': $props['up-on-dismissed'] ? $props['up-on-dismissed'] : 'up.reload("table")'
})
  @svg('fa-solid:plus')
@end
