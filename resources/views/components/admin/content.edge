@jrmc.drawer({ class: 'drawer-mobile' })
  @jrmc.drawer.content()
    <div class="flex flex-col justify-center px-4 mb-14 lg:mb-0" up-main>
      {{{ await $slots.main() }}}
    </div>

    <div id="actions-form" class="sticky w-full bottom-12 lg:left-0 lg:bottom-0"></div>
    @!admin.bottomNavigation({ class: 'lg:hidden'})
  @end

  @jrmc.drawer.side({ class: 'overflow-y-auto w-80 bg-base-200' })
    @!admin.sidebar()
    @!admin.bottomNavigation({ class: 'hidden lg:flex'})
  @end
@end
